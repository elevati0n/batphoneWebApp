<% provide(:title, 'Create Stream') %>
<h1>Create Stream </h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@stream) do |f| %>

        <%#= f.label :admin_id %>
        <%= f.hidden_field(:user_id, :value => current_user.id) %>



        <%= f.label :port %>
        <%= f.text_field :port %>

        <%= f.label :device_id %>
        <%= f.collection_select(:device_id, @devices, :id, :name) %>

        <%= f.label :network_id %>
        <%= f.collection_select(:network_id, @networks, :id, :name) %>

        <%= f.submit "Create Stream", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
