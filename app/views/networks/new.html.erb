<% provide(:title, 'Add Network') %>
<h1>Add Network</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@network) do |f| %>

        <%#= f.label :admin_id %>
        <%= f.hidden_field(:admin_id, :value => current_user.id) %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :publickey %>

        <%= f.text_area :publickey %>


        <%= f.submit "Add Network", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
